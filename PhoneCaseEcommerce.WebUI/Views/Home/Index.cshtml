@model CasesGetListViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Add some shadow to the cards */
        .card {
            position: relative;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .favorite-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            border: none;
            background-color: transparent;
            cursor: pointer;
        }

        .favorite-btn i {
            color: gray;
            transition: color 0.3s;
        }

        .favorite-btn i.favorited {
            color: red;
        }

        .add-to-cart-btn {
            float: right;
        }

        /* Style the banner image */
        .banner-image {
            height: 300px;
            background-image: url('https://bananas-store.com/cdn/shop/products/96506dc9d93ec376aaab2ae2f73cee4c_2048x.jpg');
            background-size: cover;
            background-position: center;
            position: relative;
            color: white;
        }

        .banner-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            width: 100%;
        }

        .search-bar {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .search-input {
            width: 300px;
            padding: 10px;
            border-radius: 5px 0 0 5px;
            border: 1px solid #ccc;
        }

        .search-button {
            padding: 10px;
            border: 1px solid #ccc;
            border-left: none;
            border-radius: 0 5px 5px 0;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Banner Image with Search Bar -->
    <div class="banner-image mb-5">
        <div class="banner-content">
            <h1>Welcome to PhoneCaseStore</h1>
            <div class="search-bar">
                <input type="text" class="search-input" placeholder="Search for phone cases...">
                <button class="search-button">Search</button>
            </div>
        </div>
    </div>

    <a href="/Filter">Filter</a>

    <!-- Product Cards Section -->
    <div class="container mt-5">
        <h1>Premium</h1>
        <div class="row">
            @foreach (var phoneCase in Model.PremiumList)
            {
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@phoneCase.PhoneCaseImages.FirstOrDefault(p=>p.PhoneCase==phoneCase)?.Path" alt="@phoneCase.Description">
                            <div class="card-body">
                                <h5 class="card-title">@phoneCase.Model.Name @phoneCase.Vendor.Name </h5>
                                <h5 class="card-text" style="color:red">@phoneCase.Price.ToString("C")</h5>

                                <button class="btn btn-primary add-to-cart-btn">Add to Cart</button>
                            </div>

                            <button class="favorite-btn" onclick="toggleFavorite(this)">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
            }
        </div>

        <h1>Best Sellers</h1>
        <div class="row">
            @foreach (var phoneCase in Model.BestSellerList)
            {
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@phoneCase.PhoneCaseImages.FirstOrDefault(p=>p.PhoneCase==phoneCase)?.Path" alt="@phoneCase.Description">
                            <div class="card-body">
                                <h5 class="card-title">@phoneCase.Model.Name @phoneCase.Vendor.Name </h5>
                                <h5 class="card-text" style="color:red">@phoneCase.Price.ToString("C")</h5>

                                <button class="btn btn-primary add-to-cart-btn">Add to Cart</button>
                            </div>

                            <button class="favorite-btn" onclick="toggleFavorite(this)">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
            }
        </div>

        <h1>Recommended</h1>
        <div class="row">
            @foreach (var phoneCase in Model.CommentedList)
            {
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="@phoneCase.PhoneCaseImages.FirstOrDefault(p=>p.PhoneCase==phoneCase)?.Path" alt="@phoneCase.Description">
                            <div class="card-body">
                                <h5 class="card-title">@phoneCase.Model.Name @phoneCase.Vendor.Name </h5>
                                <h5 class="card-text" style="color:red">@phoneCase.Price.ToString("C")</h5>

                                <button class="btn btn-primary add-to-cart-btn">Add to Cart</button>
                            </div>

                            <button class="favorite-btn" onclick="toggleFavorite(this)">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript for changing heart color on click -->
    <script>
        function toggleFavorite(button) {
            const icon = button.querySelector('i');
            icon.classList.toggle('favorited');
        }
    </script>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</body>
</html>
